CC = c++
CFLAGS = -Wall -Wextra -Werror -std=c++98

SRC = Fixed.cpp Point.cpp bsp.cpp main.cpp
OBJ = $(SRC:.cpp=.o)
EXECUTABLE = ex03

all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJ)
	$(CC) $(OBJ) $(LDFLAGS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(EXECUTABLE)

re: fclean all
